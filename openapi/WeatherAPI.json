{
  "openapi": "3.0.1",
  "info": {
    "title": "WeatherAPI | v1",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://localhost:7163/"
    }
  ],
  "paths": {
    "/api/weather": {
      "post": {
        "tags": [
          "Weather",
          "Forecast"
        ],
        "summary": "Get the weather forecast for a specific location",
        "description": "This endpoint provides a weather forecast for the specified location, including temperature and summary.",
        "operationId": "GetWeatherForecast",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WeatherForecastRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WeatherForecastResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "WeatherForecastRequest": {
        "required": [
          "location"
        ],
        "type": "object",
        "properties": {
          "location": {
            "type": "string"
          }
        }
      },
      "WeatherForecastResponse": {
        "required": [
          "date",
          "temperatureC",
          "summary",
          "location"
        ],
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "summary": {
            "type": "string",
            "nullable": true
          },
          "location": {
            "type": "string"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Weather"
    },
    {
      "name": "Forecast"
    }
  ]
}